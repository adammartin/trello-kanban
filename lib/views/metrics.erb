<html>
  <head>
    <title>Kanban Metrics</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/d3/3.5.10/d3.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/uvCharts/1.0.0/uvcharts.min.js"></script>
  </head>
  <body>
    <div id="uv-div"></div>
    <script type="text/javascript">
      $(document).ready(function() {
         init();
      });

      function init() {
         var config = {
            graph: { orientation: 'Vertical' },
            dimension: { width: 800 },
            tooltip: { show: true },
            area: { interpolation: "monotone" }
         }
         var chart = uv.chart('StackedArea', <%=@graphdef%>, config);
      }
    </script>
  </body>
</html>
